# Default site (your main app)
{$DOMAIN} {
  {$CADDY_CONFIG_EXTRA}

  # Main reverse proxy
  reverse_proxy h2c://app
}

# Adminer (Database management)
{$DOMAIN}:7080 {

  basicauth {
      {$PROD_MANAGEMENT_USER} {$PHPMA_PASSWORD_HASH}
  }

  reverse_proxy h2c://adminer:8080
}

# File Browser
{$DOMAIN}:7081 {
  basicauth {
      {$PROD_MANAGEMENT_USER} {$PHPMA_PASSWORD_HASH}
  }
  reverse_proxy h2c://filebrowser:8080
}